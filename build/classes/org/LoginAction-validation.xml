<?xml version="1.0" encoding="utf-8" ?>
<!-- 不同的xml需要不同的DTD信息 -->
<!DOCTYPE validators PUBLIC "-//Apache Struts//XWork Validator 1.0.3//EN"
"http://struts.apache.org/dtds/xwork-validator-1.0.3.dtd">
<!-- 定义规则定义文件的根元素 -->
<validators>
<field name="username">
<field-validator type="requiredstring"> <!-- 如果验证失败则显示user.required信息 -->
<message key="user.required" />
</field-validator>
</field>
<field name="password">
<field-validator type="requiredstring"> <!-- 如果验证失败则显示user.required信息 -->
<message key="user.required" />
</field-validator>
</field>
</validators>